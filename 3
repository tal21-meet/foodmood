        function G(R) {
            var link=["https://www.goodhousekeeping.com/food-recipes/easy/g428/easy-egg-recipes/",
            "https://www.tasteofhome.com/collection/recipes-for-ripe-bananas/",
            "https://www.bonappetit.com/recipes/slideshow/40-avocado-recipes-so-you-can-eat-as-much-avocado-as-possible"]
