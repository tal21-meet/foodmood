        function G(R) {
            var link=["https://www.tasteofhome.com/collection/best-chocolate-recipes-in-every-state/",
            "https://www.bbcgoodfood.com/recipes/collection/pasta",
            "https://www.bbcgoodfood.com/recipes/collection/classic-cake"]
